<%= link_to pokemon, data: { turbo_frame: "_top" } do %>
  <article class="h-36 lg:h-52 relative overflow-hidden flex justify-between items-end p-4 text-zinc-100 rounded-2xl hover:brightness-90" style="background-color: <%= pokemon.color %>">
    <%= image_tag("pokeball.svg", class: "absolute -right-4 -bottom-4 h-32 opacity-25 -rotate-45", alt: "Psyduck splashing in the water at our resort") %>
    <span class="absolute left-4 top-4 text-6xl font-semibold opacity-25">#<%= pokemon.id.to_s.rjust(3, '0') %></span>
    <h3 class="text-lg font-semibold"><%= pokemon.name %></h3>
    <%= image_tag(pokemon.image, class: "relative h-32 -mb-5 -mr-5", alt: "Psyduck splashing in the water at our resort") %>
  </article>
<% end %>