    </tr>
    <tr>
      <th class="font-normal text-zinc-500 text-start align-top">Size</th>
      <td class="font-semibold text-accent"><%= @adoptable_pokemon.size.capitalize %></td>
    </tr>
    <tr>
      <th class="font-normal text-zinc-500 text-start align-top">Temperament</th>
      <td class="font-semibold text-accent"><%= @adoptable_pokemon.temperament.capitalize %></td>
    </tr>
    <tr>
      <th class="font-normal text-zinc-500 text-start align-top">Health Status</th>
      <td class="font-semibold text-accent"><%= @adoptable_pokemon.health %></td>
    </tr>
    <tr>
      <th class="font-normal text-zinc-500 text-start align-top">Background</th>
      <td class="font-semibold text-accent"><%= @adoptable_pokemon.background %></td>
